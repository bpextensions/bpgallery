<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldprefix="BPExtensions\Component\BPGallery\Administrator\Field">

        <field
                name="id"
                type="text"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                default="0"
                readonly="true"
                class="readonly"
        />

		<field
			name="title"
			type="text"
			label="COM_BPGALLERY_FIELD_TITLE_LABEL"
			description="COM_BPGALLERY_FIELD_TITLE_DESC"
			class="input-xxlarge input-large-text"
			size="40"
			required="true"
        />

        <field
                name="alias"
                type="text"
                label="JFIELD_ALIAS_LABEL"
                description="COM_BPGALLERY_FIELD_ALIAS_DESC"
                size="40"
                hint="JFIELD_ALIAS_PLACEHOLDER"
        />

        <field
                name="alt"
                type="text"
                label="COM_BPGALLERY_FIELD_ALT_LABEL"
                description="COM_BPGALLERY_FIELD_ALT_DESC"
                size="40"
                hint="COM_BPGALLERY_FIELD_ALT_HINT"
        />

        <field
                name="filename"
                type="media"
                directory="gallery/original"
                preview="true" perview_height="200"
                required="true"
                label="COM_BPGALLERY_FIELD_FILENAME_LABEL"
                description="COM_BPGALLERY_FIELD_FILENAME_DESC"
                size="40"
                hint="COM_BPGALLERY_FIELD_FILENAME_PLACEHOLDER"
        />

		<field
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			description="COM_BPGALLERY_FIELD_CATEGORY_DESC"
			extension="com_bpgallery"
			required="true"
			addfieldprefix="BPExtensions\Component\BPGallery\Administrator\Field"
			default=""
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="COM_BPGALLERY_FIELD_STATE_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="ordering"
			type="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			table="#__bpgallery_images"
		/>

		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_BPGALLERY_FIELD_LANGUAGE_DESC"
			>
			<option value="*">JALL</option>
		</field>

		<field
			name="intro"
			type="editor"
			label="COM_BPGALLERY_FIELD_INTRO_LABEL"
			description="COM_BPGALLERY_FIELD_INTRO_DESC"
			filter="JComponentHelper::filterText"
			buttons="true"
			hide="readmore,pagebreak"
		/>
        
		<field
			name="description"
			type="editor"
			label="JGLOBAL_DESCRIPTION"
			description="COM_BPGALLERY_FIELD_DESCRIPTION_DESC"
			filter="JComponentHelper::filterText"
			buttons="true"
			hide="readmore,pagebreak"
		/>

        <field
                name="created"
                type="calendar"
                label="COM_BPGALLERY_FIELD_CREATED_LABEL"
                description="COM_BPGALLERY_FIELD_CREATED_DESC"
                size="22"
                format="%Y-%m-%d %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="COM_BPGALLERY_FIELD_CREATED_BY_LABEL"
                description="COM_BPGALLERY_FIELD_CREATED_BY_DESC"
        />

        <field
                name="created_by_alias"
                type="text"
                label="COM_BPGALLERY_FIELD_CREATED_BY_ALIAS_LABEL"
                description="COM_BPGALLERY_FIELD_CREATED_BY_ALIAS_DESC"
                size="20"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                description="COM_BPGALLERY_FIELD_MODIFIED_DESC"
                class="readonly"
                size="22"
                readonly="true"
                format="%Y-%m-%d %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                description="COM_BPGALLERY_FIELD_MODIFIED_BY_DESC"
                class="readonly"
                readonly="true"
                filter="unset"
        />

        <field
                name="publish_up"
                type="calendar"
                label="COM_BPGALLERY_FIELD_PUBLISH_UP_LABEL"
                description="COM_BPGALLERY_FIELD_PUBLISH_UP_DESC"
                format="%Y-%m-%d %H:%M:%S"
                size="22"
                filter="user_utc"
        />

        <field
                name="publish_down"
                type="calendar"
                label="COM_BPGALLERY_FIELD_PUBLISH_DOWN_LABEL"
                description="COM_BPGALLERY_FIELD_PUBLISH_DOWN_DESC"
                format="%Y-%m-%d %H:%M:%S"
                size="22"
                filter="user_utc"
        />

        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                description="JFIELD_ACCESS_DESC"
                size="1"
        />

    </fieldset>

    <fields name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
        <fieldset name="jmetadata"
                  label="JGLOBAL_FIELDSET_METADATA_OPTIONS">

            <field
                    name="metadesc"
                    type="textarea"
                    label="JFIELD_META_DESCRIPTION_LABEL"
                    description="JFIELD_META_DESCRIPTION_DESC"
                    rows="3"
                    cols="30"
            />

            <field
                    name="metakey"
                    type="textarea"
                    label="JFIELD_META_KEYWORDS_LABEL"
                    description="JFIELD_META_KEYWORDS_DESC"
                    rows="3"
                    cols="30"
            />

            <field
                    name="robots"
                    type="list"
                    label="JFIELD_METADATA_ROBOTS_LABEL"
                    description="JFIELD_METADATA_ROBOTS_DESC"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
                <option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
                <option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
                <option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
            </field>

            <field
                    name="author"
                    type="text"
                    label="JAUTHOR"
                    description="JFIELD_METADATA_AUTHOR_DESC"
                    size="20"
            />

            <field
                    name="rights"
                    type="textarea"
                    label="JFIELD_META_RIGHTS_LABEL"
                    description="JFIELD_META_RIGHTS_DESC"
                    filter="string"
                    cols="30"
                    rows="2"
            />

        </fieldset>
    </fields>

</form>
